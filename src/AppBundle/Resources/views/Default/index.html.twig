{# empty Twig template #}
{% extends "::base.html.twig" %}

{% block jumbotron %}

{% endblock %}

{% block carousel %}
    <div class="container" style="margin-top:70px;">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block img-fluid  img-thumbnail" src="../uploads/images/how_to_marry_a_millionaire_1.jpg" alt="how_to_marry_a_millionaire_1.jpg">
                    <div class="carousel-caption im1">
                        <h3>Billy Wilder</h3>
                        <p>Comment épouser un millionnaire - 1953</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid img-thumbnail" src="../uploads/images/la-nuit-americaine-1.jpg" alt="la-nuit-americaine-1.jpg">
                    <div class="carousel-caption  im1 d-none d-md-block">
                        <h3>François Truffaut</h3>
                        <p>La Nuit Américaine - 1973</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid img-thumbnail" src="../uploads/images/breathless_1.jpg" alt="breathless_1.jpg">
                    <div class="carousel-caption im1 d-none d-md-block">
                        <h3>Jean-Luc Godard</h3>
                        <p>À bout de souffle - 1960</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}
